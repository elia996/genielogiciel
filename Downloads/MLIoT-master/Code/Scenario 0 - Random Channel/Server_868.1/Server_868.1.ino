bool stringIsNumber(const char* str){
  for(int i=0; i<strlen(str);++i){
    if(!(str[i] >= '0' && str[i] <= '9')) return false;
  }
  return true;
}

bool charIsNumber(char str){
  if(!(str >= '0' && str <= '9')) return false;
  return true;
}

char *substring(char *string, int position, int length)
{
   char *pointer;
   int c;
 
   pointer = (char*) malloc(length+1);
   
   if (pointer == NULL)
   {
      printf("Unable to allocate memory.\n");
      exit(1);
   }
 
   for (c = 0 ; c < length ; c++)
   {
      *(pointer+c) = *(string+position-1);      
      string++;  
   }
 
   *(pointer+c) = '\0';
 
   return pointer;
}


int myCtr=0;

void loop()
{
  if (rf95.available())
  {
    // Do not overload this part, should mainly be waiting for new messages
    // Should be a message for us now   
    uint8_t buf[RH_RF95_MAX_MESSAGE_LEN];
    uint8_t len = sizeof(buf);
    if (rf95.recv(buf, &len))
    {
      //if(stringIsNumber((const char*) substring((char*) buf,1,1))){
      if(charIsNumber((char) ((char*) buf)[0])){
        //Serial.println((char) ((char*) buf)[0]);
        myCtr++;
        Serial.println(String("Got message: ") + ((char*) buf) + ", Total packets arrived: "+ String(myCtr));
//        Serial.print((char*)buf);
//        Serial.println(", Total packets arrived: "+ String(myCtr));
      }
    }
    else
    {
      Serial.println("recv failed");
    }
  }
}
